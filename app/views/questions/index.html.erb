<%= stylesheet_link_tag 'questions', :media => "all" %>

<div class="questions-container">
<h3>質問投稿一覧</h3>
   <% @questions.each do |t| %>
     <div class="question">
       <div class= "main-box">
        <div class="left-container">
         <%= t.user.name %>
         </div>
        <div class="center-container"><%= t.title %></div>
        <div class="right-container">
         <%= link_to "詳細へ", question_path(t.id) %>
        </div>
       </div>
     </div>
   <% end %> 
 </div>

 <div class= "btn-circle-flat">
  <%= link_to "新規投稿する", :controller => "questions", :action => "new" %>
 </div>

 <div class= "btn-circle-flat2">
  <%= link_to "投稿一覧へ", users_path %>
 <div>

 

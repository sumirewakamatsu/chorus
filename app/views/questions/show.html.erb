<%= stylesheet_link_tag 'answers', :media => "all" %>

<h3>質問詳細</h3>
<div class= "question" >
 <div class="title">
 <%= @question.title %></div>
 <div class="body"><%= @question.body %></div>
</div>

<a><%= link_to "投稿を編集する", edit_question_path(@question.id) %></a>


<div class="answer">
 <%= form_with(model: [@question, @answer], local: true) do |f| %>
    <div>
     <%= f.label :body, "回答" %><br>
     <%= f.text_area :body %>
    </div>
    <%= f.submit %>
  <% end %>
</div>

<div>
 <% @question.answers.each do |answer| %>
    <p><%= answer.body %></p>
    <% end %>
</div>

<%= link_to "質問一覧に戻る", questions_path %>

<%= stylesheet_link_tag 'answers', :media => "all" %>
<body>
<div class="container">
  <div class="row">
    <div class="col-md-1">
   
    </div>
    <div class="col-md-10">

<h1 class="text-center font-weight-bold" pt-5>質問詳細</h1>

<div class= "question pt-3" >
  <p><%= @question.title %></p>
  <p><%= @question.body %></p>
</div>

<div class="link1">
 <%= link_to "投稿を編集する", edit_question_path(@question.id) %>
</div>

<div class="answer pt-3">
 <%= form_with(model: [@question, @answer], local: true) do |f| %>
    <div>
     <br><%= f.label :body, "回答" %></br>
     <%= f.text_area :body, class:"col-md-12 form-control" %>
    </div>
    <div class="action pt-3">
     <%= f.submit "回答する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="post-answer">
 <% @question.answers.each do |answer| %>
    <p><%= answer.body %></p>
  <% end %>
</div>

<div class="btn">
  <a href="/questions" class="btn-circle-flat">質問一覧に戻る</a>
</div>
<div class="col-md-1">

    </div>
  </div>
</div>
</body>

<%= stylesheet_link_tag 'users', :media => "all" %>
<body>
<div class="container">
  <div class="row">
    <div class="col-md-1">

    </div>
    <div class="col-md-10">

    <h1 class="text-center font-weight-bold pt-5">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "users/shared/error_messages", resource: resource %>

<div class="field pt-3">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, class: "col-md-12 form-control" %>
</div>

  <div class="field pt-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-12 form-control" %>
  </div>

  <div class="field pt-3">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum) パスワードは最小6文字です</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"col-md-12 form-control" %>
  </div>

  <div class="field pt-3">
    <%= f.label :パスワードを確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-12 form-control" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="actions pt-3">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>
<div class="col-md-1">

    </div>
  </div>
</div>
</body>